{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "FilePath": ""
  },
  "AllowedHosts": "*",
  "Services": {
    "STT": {
      "Provider": "OpenAI",
      "ApiKey": "your-openai-api-key-here",
      "Model": "whisper-1",
      "BaseUrl": "https://api.openai.com/v1/audio/transcriptions"
    },
    "TTS": {
      "Provider": "OpenAI",
      "ApiKey": "your-openai-api-key-here",
      "Model": "tts-1",
      "Voice": "alloy",
      "BaseUrl": "https://api.openai.com/v1/audio/speech"
    },
    "RAG": {
      "Provider": "OpenAI",
      "ApiKey": "your-openai-api-key-here",
      "Model": "gpt-4",
      "EmbeddingModel": "text-embedding-3-small",
      "BaseUrl": "https://api.openai.com/v1"
    },
    "Payment": {
      "Provider": "Stripe",
      "ApiKey": "your-stripe-secret-key-here",
      "BaseUrl": "https://api.stripe.com/v1",
      "DisableRawCardDetails": false
    }
  },
  "Data": {
    "StoragePath": "data",
    "Repositories": {
      "Context": "data/context",
      "Orders": "data/orders",
      "Cards": "data/cards",
      "STT": "data/stt",
      "TTS": "data/tts",
      "RAG": "data/rag"
    }
  }
}
