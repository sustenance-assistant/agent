{
  "info": {
    "name": "FoodOrderingService",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\",\n  \"name\": \"John Doe\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api","auth","register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api","auth","login"]
            }
          }
        },
        {
          "name": "Create API Key",
          "request": {
            "method": "POST",
            "header": [
              {"key": "x-user-id", "value": "{{userId}}"}
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/api-key",
              "host": ["{{baseUrl}}"],
              "path": ["api","auth","api-key"]
            }
          }
        }
      ]
    },
    {
      "name": "Payment",
      "item": [
        {
          "name": "Add Payment Card",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "x-user-id", "value": "{{userId}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cardNumber\": \"4242424242424242\",\n  \"expMonth\": 12,\n  \"expYear\": 2025,\n  \"cvc\": \"123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/payment/cards",
              "host": ["{{baseUrl}}"],
              "path": ["api","payment","cards"]
            }
          }
        },
        {
          "name": "Get Payment Card",
          "request": {
            "method": "GET",
            "header": [
              {"key": "x-user-id", "value": "{{userId}}"}
            ],
            "url": {
              "raw": "{{baseUrl}}/api/payment/cards/{{cardId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api","payment","cards","{{cardId}}"]
            }
          }
        },
        {
          "name": "Bill User (Full Card Details - Stripe Headless)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "x-user-id", "value": "{{userId}}"},
              {"key": "x-api-key", "value": "{{apiKey}}"},
              {"key": "x-session-id", "value": "{{sessionId}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cardNumber\": \"4242424242424242\",\n  \"expMonth\": 12,\n  \"expYear\": 2025,\n  \"cvc\": \"123\",\n  \"totalAmount\": 29.99,\n  \"currency\": \"USD\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/payment/bill",
              "host": ["{{baseUrl}}"],
              "path": ["api","payment","bill"]
            },
            "description": "Bill user with full card details. Card details are processed securely on backend (Stripe headless style)."
          }
        },
        {
          "name": "Bill User (Saved Card)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "x-user-id", "value": "{{userId}}"},
              {"key": "x-api-key", "value": "{{apiKey}}"},
              {"key": "x-session-id", "value": "{{sessionId}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cardId\": \"{{cardId}}\",\n  \"totalAmount\": 29.99,\n  \"currency\": \"USD\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/payment/bill",
              "host": ["{{baseUrl}}"],
              "path": ["api","payment","bill"]
            },
            "description": "Bill user using saved card by ID."
          }
        }
      ]
    },
