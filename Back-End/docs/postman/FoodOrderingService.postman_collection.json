        {
          "name": "Call Tool (order with workflow)",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "x-api-key", "value": "{{apiKey}}"},
              {"key": "x-user-id", "value": "{{userId}}"},
              {"key": "x-session-id", "value": "{{sessionId}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tool\": \"order\",\n  \"workflow\": \"order\",\n  \"arguments\": {\n    \"items\": [{ \"sku\": \"pizza.pepperoni.lg\", \"qty\": 1 }],\n    \"paymentId\": \"pay_123\"\n  }\n}"
            },
            "url": {
